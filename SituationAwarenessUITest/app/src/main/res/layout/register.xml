<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ffiandroid.situationawarenessuitest.Register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/user_password"
        android:inputType="textPassword"
        android:id="@+id/register_user_password"
        android:layout_marginBottom="20dp"
        android:maxLength="10"
        android:layout_centerInParent="true"
        android:width="200dp"
        android:imeOptions="actionNext"
        android:gravity="center"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/repeat_password"
        android:inputType="textPassword"
        android:id="@+id/register_user_password_repeat"
        android:layout_below="@+id/register_user_password"
        android:maxLength="10"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:width="200dp"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/group_id"
        android:id="@+id/register_group_id"
        android:maxLength="20"
        android:editable="false"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:layout_above="@+id/register_user_password"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:gravity="center"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/user_id"
        android:id="@+id/register_user_id"
        android:maxLength="10"
        android:layout_above="@+id/register_group_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:imeOptions="actionNext"
        android:gravity="center"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/user_name"
        android:id="@+id/register_user_name"
        android:maxLength="10"
        android:layout_above="@+id/register_user_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:imeOptions="actionNext"
        android:gravity="center"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_user_password_repeat"
        android:layout_centerHorizontal="true"
        android:text="@string/register_user"
        android:id="@+id/btn_register"
        android:onClick="registerClicked"
        android:width="200dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:text="Back to Login Screen"
        android:onClick="backtoLoginClicked"
        android:layout_marginTop="10dp"
        android:width="200dp"
        android:gravity="center"/>

</RelativeLayout>