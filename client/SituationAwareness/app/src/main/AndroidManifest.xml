<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ffiandroid.situationawareness" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />


    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/sairTheme" >
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map_view" >
        </activity>
        <activity
            android:name=".AppSettings"
            android:label="@string/title_activity_app_settings"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".Status"
            android:label="@string/title_activity_status"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".Report"
            android:label="@string/title_activity_report"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".ReportView"
            android:label="@string/title_activity_report_view"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".LocationView"
            android:label="@string/title_activity_location_view" >
        </activity>
        <activity
            android:name=".ImageDisplay"
            android:label="@string/title_activity_image_display"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".PhotoView"
            android:label="@string/title_activity_photo_view" >
        </activity>
    </application>

</manifest>
