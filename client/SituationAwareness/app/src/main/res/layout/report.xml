<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/send_report_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ffiandroid.situationawareness.Report">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_edit_text_report"
        android:hint="report_observation"
        android:layout_marginTop="39dp"
        android:inputType="textMultiLine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="330dp"
        android:text="Lat-Long"
        android:layout_below="@+id/report_edit_text_report"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/attached_image_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Photo Path:"
        android:layout_below="@+id/coordinates"/>
    <ImageView
        android:id="@+id/attached_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/attached_image_path"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_report"
        android:onClick="sendReportOnClicked"
        android:width="200dp"
        android:text="@string/save_report"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/btn_photo"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addPhotoButtonOnClicked"
        android:text="@string/attach_photo"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/attached_image"
        android:layout_alignLeft="@+id/coordinates"
        android:layout_alignStart="@+id/coordinates" />



</RelativeLayout>
